<resources>

    <!-- Base application theme. -->
    <style name="general" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>
    <style name="regular_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="menu_button" parent="regular_button">
        <item name="android:background">@drawable/general_button</item>
    </style>
    <style name="game_level_button" parent="regular_button">
        <item name="android:background">@drawable/selector_button</item>
    </style>
    <style name="back_button" parent="regular_button">
        <item name="android:background">@null</item>
        <item name="android:src">@mipmap/ic_back</item>
    </style>
    <style name="mine_button" parent="regular_button">
        <item name="android:background">@null</item>
        <item name="android:src">@mipmap/ic_mine</item>
    </style>
    <style name="flag" parent="regular_button">
        <item name="android:background">@mipmap/ic_flag</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>
</resources>
